<Window x:Class="Bakery.Enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery"
        mc:Ignorable="d"
        Title="Авторизация" Height="450"  Width="800" MinHeight="450" MinWidth="800">
    <DockPanel>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel VerticalAlignment="Center">
                <Label FontSize="18" Margin="0 5 0 0">Логин</Label>
                <TextBox TextChanged="login_TextChanged" Name="login" FontSize="20" Background="#D9D9D9" Padding="5"></TextBox>
                <Label FontSize="18" Margin="0 5 0 0">Пароль</Label>
                <TextBox TextChanged="password_TextChanged" Name="password" FontSize="20" Background="#D9D9D9" Padding="5"></TextBox>
                <Button FontSize="20" Background="#D9D9D9" Margin="0 20 0 0" Padding="5" Click="Button_Click">Войти</Button>
            </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
